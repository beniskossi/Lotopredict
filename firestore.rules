
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Collection: lottoResults
    // Les résultats des tirages peuvent être lus par tout le monde.
    // Seuls les utilisateurs authentifiés peuvent écrire (créer, mettre à jour, supprimer).
    // TODO: Affiner cette règle pour permettre les écritures uniquement par des administrateurs désignés.
    match /lottoResults/{resultId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Ajoutez ici des règles pour d'autres collections si nécessaire.
    // Exemple :
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
